{
  "name": "belafonte",
  "description": "A peer to peer content distribution network",
  "version": "0.2.1",
  "author": {
    "name": "Jared Deckard",
    "email": "jared.deckard@gmail.com"
  },
  "browser": {},
  "browserify": {
    "transform": [
      "package-json-versionify"
    ]
  },
  "bugs": {
    "url": "https://github.com/deckar01/belafonte/issues"
  },
  "dependencies": {
    "create-torrent": "^3.25.1",
    "safe-buffer": "^5.0.1",
    "webtorrent": "^0.97.2"
  },
  "devDependencies": {
    "browserify": "^13.0.1",
    "eslint": "^3.8.1",
    "uglifyjs": "^2.4.10"
  },
  "engines": {
    "node": ">=4"
  },
  "keywords": [
    "bittorrent",
    "cache",
    "cdn",
    "p2p",
    "peer",
    "seed",
    "share",
    "torrent",
    "web2web",
    "webtorrent",
    "webrtc"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/deckar01/belafonte.git"
  },
  "scripts": {
    "build:browserify": "browserify -s Belafonte -e ./ > dist/belafonte.js",
    "build:minify": "cat dist/belafonte.js | uglifyjs -c warnings=false -m > dist/belafonte.min.js",
    "build": "npm run build:browserify && npm run build:minify",
    "prepublish": "npm run build",
    "lint": "eslint src",
    "test": "npm run lint"
  }
}
